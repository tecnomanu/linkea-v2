# =============================================================================
# Linkea v2 - Docker Production Environment
# =============================================================================
# Copy this file to .env and adjust values for your environment

APP_NAME=Linkea
APP_ENV=production
APP_KEY=base64:GENERATE_WITH_php_artisan_key_generate
APP_DEBUG=false
APP_TIMEZONE=America/Argentina/Buenos_Aires
APP_URL=http://localhost:8080

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=error

# Database (MySQL in Docker)
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=linkea
DB_USERNAME=linkea
DB_PASSWORD=linkea_secret_password

# Cache & Session
CACHE_STORE=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# Queue (Redis + Horizon)
QUEUE_CONNECTION=redis

# Redis
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail (Mailtrap for testing, replace with production SMTP)
MAIL_MAILER=smtp
MAIL_HOST=sandbox.smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=your_mailtrap_username
MAIL_PASSWORD=your_mailtrap_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="hola@linkea.ar"
MAIL_FROM_NAME="${APP_NAME}"

# AWS S3 (for file storage in production)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=sa-east-1
AWS_BUCKET=linkea
AWS_USE_PATH_STYLE_ENDPOINT=false

# Filesystem
FILESYSTEM_DISK=local

# Vite (important for production - no dev server)
VITE_APP_NAME="${APP_NAME}"

# Horizon
HORIZON_QUEUE_PREFIX=linkea_horizon:
